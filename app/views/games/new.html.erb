<div class="container">
  <h1> New Game </h1>

  <ul>
    <% @letters.each do |letter|%>
      <li class="bg-primary p-4 fs-3 wt-20"><%=letter%></li>
    <% end %>
  </ul>

  <form action="/score" method="post" data-turbo="false">
    <label>What is the longest word you can find?</label>

    <div class="input-group mb-3">
      <input type="text"
        class="form-control"
        name="word"
        value="<%= params[:word] %>"
        placeholder="Insert word here?">
      <input type="submit" class="bg-primary">
    </div>

    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
